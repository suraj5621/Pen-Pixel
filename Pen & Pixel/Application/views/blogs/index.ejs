<% layout('/layouts/boilerplate') %>
<%- include('../partials/navbar') %>    

<div class="bg-gray-900 min-h-screen relative">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% for (let item of items) { %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition duration-500 transform hover:scale-105 relative">
          <img src="<%= item.img %>" alt="<%= item.title %>" class="w-full h-64 object-cover object-center rounded-t-lg">
    
          <div class="p-6">
            <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-white mb-2"><%= item.title %></h1>
            <p class="text-gray-400 leading-relaxed mb-4 h-24 overflow-hidden" id="description"><%= item.desc %></p>
          </div>
          
          <a href="/blogs/<%= item.id%>" class="absolute bottom-4 left-4 px-4 py-2 bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 text-white rounded transition-colors duration-300 hover:bg-gradient-to-br z-10">Read More</a>
        </div>
      <% } %>
    </div>
  </div>
</div>
